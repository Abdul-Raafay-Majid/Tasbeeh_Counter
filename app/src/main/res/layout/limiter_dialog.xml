<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stopper_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/Accent_Color">

        <TextView
            android:id="@+id/stopper_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Stopper"
            android:textSize="28sp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/stopper_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tasbeeh_hand"
            android:layout_centerHorizontal="true"
            android:hint="Enter Stopper"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp">

        </EditText>

        <ImageButton
            android:id="@+id/close_Button"
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_close" />

        <ImageView
            android:id="@+id/tasbeeh_hand"
            android:layout_width="130dp"
            android:layout_height="166dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            app:srcCompat="@drawable/tasbeeh_hands" />

        <Button
            android:id="@+id/ok_button"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/stopper_editText"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_background_ok"
            android:text="OK" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>